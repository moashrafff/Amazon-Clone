<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/product_image_view"
            android:src="@drawable/kettle_image"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/egp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/amazonember_lt"
            android:text="EGP"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_below="@+id/product_image_view"

            />

        <TextView
            android:id="@+id/product_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_view"
            android:layout_alignStart="@+id/egp"
            android:layout_marginStart="30dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/amazon_ember_medium"
            android:text="12,0"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_marginTop="2dp"

            />

        <TextView
            android:id="@+id/product_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/product_price_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/amazonember_lt"
            android:gravity="center"
            android:text="Kendel"
            android:textSize="15sp" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>