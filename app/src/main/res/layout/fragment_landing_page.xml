    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Pages.Fragments.a_LandingPageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.recyclerview.widget.RecyclerView
